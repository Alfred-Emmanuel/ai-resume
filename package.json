{
  "name": "ai-resume-app",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "packageManager": "pnpm@9.6.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "docker:build:backend": "docker build -f apps/backend/Dockerfile -t ai-resume-backend:dev .",
    "docker:run:backend": "docker run --rm -p 4000:4000 --env PORT=4000 ealfred/ai-resume-backend:latest",
    "docker:tag:backend": "docker tag ai-resume-backend:dev $DOCKERHUB_USER/ai-resume-backend:latest",
    "docker:push:backend": "docker push ealfred/ai-resume-backend:latest"
  },
  "devDependencies": {
    "turbo": "^2.0.6",
    "typescript": "^5.5.4"
  }
}
